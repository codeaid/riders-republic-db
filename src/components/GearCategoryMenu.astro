---
import { GearCategoryMenuEntry } from 'types/routing';
import GearCategoryMenuItem from './GearCategoryMenu/GearCategoryMenuItem.astro';

interface Props {
  active?: GearCategoryMenuEntry;
  entries: GearCategoryMenuEntry[];
}

const { active, entries } = Astro.props;
---

<ul class="list-none select-none space-y-1">
  {
    entries.map(entry => (
      <GearCategoryMenuItem
        active={active?.path === entry.path}
        entry={entry}
      />
    ))
  }
</ul>
